<%= semantic_form_for(@model) do |f| %>
  <%= f.semantic_errors :state %>

  <%= f.inputs do %>
  	<%= f.input :title, hint: true %>
  	<%= f.input :description, as: :text, hint: true %>
  	<%= f.input :is_published, as: :boolean, hint: true %>
  	<%- if permitted_params.model_attributes.include?(:owner_id) %>
  	<%= f.input :owner, as: :select, 
  	 collection: User.all, 
  	 member_label: :email
    %>
  	<%- end%>
  	
  	
  <% end %>

  <%= f.actions do %>
  	<%= f.action :submit, :as => :button %>
  	<div class="menu">
		<%= menu %>
	</div>	
  <%- end %>
<%- end %>

<div class="clear"></div>