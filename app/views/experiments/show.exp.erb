% experiment with the model. Please note that the entries here will be 
% evaluated sequentially. The initial conditions and the parameters
% that are defined in the model can be accessed here.
<% 
min = nil;
max = nil;
@experiment.measurements.each{ |m|
	temp = nil;
	tempYarray = [];
	tempY = nil;
	temp = m.lines.find_all{ |l| l.x == 0}.first.y
	m.lines.each{ |l| 
		tempYarray << l.y if l.y != nil 
		};
	tempY = tempYarray.max;
	max = tempY if max == nil || max < tempY
	min = temp if min == nil ||  min > temp
}
max += (max - min) * 0.1
	%>

N(0) = <%= min %>

