<% 
	context_menu = [
		{
			:key => :show, 
			:name => "Show experiment", 
			:url => url_for([@model,@experiment]),
			:options => {
				:container_class => 'menu',
				:class => 'text'
			}
		},
		{
			:key => :back, 
			:name => "Goto model", 
			:url => url_for(@model),
			:options => {
				:container_class => 'menu',
				:class => 'text'
			}
		}]
	menu = nil
	content_for(:context_menu) { menu = render_navigation :items => context_menu }
	content_for(:title) { "New experiment" }
%>
<h1>Editing experiment</h1>

<%= render 'form' %>

<div class="menu">
	<%= menu %>
</div>
