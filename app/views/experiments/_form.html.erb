<h3>Using <%= @model.title %> model</h3>
<p>
	<%= simple_format @model.description %>
</p>

<%= semantic_form_for(@form) do |f| %>
  <%= f.semantic_errors :state %>

  <%= f.inputs do %>
  	<%= f.input :title %>
  	<%= f.input :description, as: :text %>
  <% end %>
  	
  <%= f.actions do %>
  	<%= f.action :submit, :as => :button %>
  	<div class="menu">
		<%= menu %>
	</div>	
  <% end%>

<% end %>

<div class="clear"></div>
