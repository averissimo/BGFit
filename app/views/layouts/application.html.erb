<!DOCTYPE html>
<html>
	<head>
		<% if content_for?(:title) %>
		<title><%= yield(:title) %> | BGFit</title>
		<% else %>
		<title>BGFit: Curve fitting</title>
		<% end %>
	  
	    <!-- Custom head -->
	  <% if content_for?(:head) %>
	  <%= yield(:head) %>
	  <% end %>
	  
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application"  %>
	  <%= csrf_meta_tags %>
	
	</head>
	<body>
		<div id="fixed-header">
			<div id="header" <% if Rails.env != "production" %>style="background-color: #7F0000!important;"<%end%>>
				<% if Rails.env != "production" %><strong><%=Rails.env%> environment</strong> <%=Rails.env%> environment <strong><%=Rails.env%> environment</strong> <%=Rails.env%> environment <strong><%=Rails.env%> environment</strong> <%=Rails.env%> environment <strong><%=Rails.env%> environment</strong><%else%><strong>KDBIO INESC-ID</strong>&nbsp;&nbsp; Instituto de Engenharia de Sistemas e Computadores Investigação e Desenvolvimento em Lisboa<%end%>
			</div>
				
			<div id="menu" class="menu" >
				<div class="menu-wrapper">
					<%= render_navigation %>
				</div>
				<% if content_for?(:context_menu) %>
				<div><span>&gt;</span></div>
				<div class="menu-wrapper">
					<%= yield(:context_menu) %>
				</div>
				<% end %>
			</div>
		</div>

		<div id="login_menu" class="menu">
			<div class="menu-wrapper">
				<%= login_menu %>
			</div>
		</div>

		<div id="content">
		  <%- flash.each do |key, value| %>
		  	<%- debugger %>
		  	<%- if value.is_a?(String)%>
		    	<%= content_tag(:div, value.html_safe, :class => "flash #{key}") %>
		    <%- else %>
		    	<%= content_tag(:div, value.join("<br/>").html_safe, :class => "flash #{key}") %>
		    <%- end %>
		  <%- end %>


			<%= yield %>
		</div>
		
		<div id="footer">
			<%= render_navigation %>
			<a href="mailto:averissimo@kdbio.inesc-id.pt">averissimo@kdbio.inesc-id.pt</a>
			<br/>
			<span><%= Time.now.year %>  KDBIO | INESC-ID</span>
		</div>
	</body>
</html>
