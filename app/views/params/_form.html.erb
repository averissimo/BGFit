<h3>Parameter for <%= @dyna_model.title %> dyna model</h3>
<p>
	<%= simple_format @dyna_model.description %>
</p>

<%= semantic_form_for([@dyna_model,@param]) do |f| %>
  <%= form_errors(f) %>

  <%= f.inputs do %>
  	<%= f.input :code %>
  	<%= f.input :human_title %>
  	<%= f.input :output_only %>
  	<%= f.input :initial_condition %>
  	<%= f.input :bottom, as: :number %>
  	<%= f.input :top, as: :number %>
  	<%= f.input :description, as: :text %>
  <% end %>
  
  <%= f.actions do %>
  	<%= f.action :submit, :as => :button , label: "Create " + Param.model_name.human.downcase%>
  	<div class="menu">
		<%= menu %>
	</div>
  <% end%>
<% end %>

<div class="clear"></div>

